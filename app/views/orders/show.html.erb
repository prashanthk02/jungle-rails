<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      <%= render 'line_item' %>
    </tbody>
  </table>

  <div class="order-summary jumbotron">
    <h4> Order Total: <%= humanized_money_with_symbol @order.total_cents/100 %> </h4>
    <h4>Thank you for your order!</h4>
    <h6> Order confirmation will be sent to <%= @order.email %> </h6>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
