<h1>Login</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<div class="form-group">
  <%= form_tag '/sessions' do %>

    Email: <%= text_field_tag :email %>
    Password: <%= password_field_tag :password %>
    <%= submit_tag "Login", class:"btn btn-primary" %>

  <% end %>
</div>